<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="dev.thematrix.tvhk.PlaybackVideoExoFragment">

    <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:focusable="true"
            android:layout_centerInParent="true"
            app:surface_type="surface_view"/>

    <ImageView
            android:id="@+id/exo_track_selection_button"
            android:src="@android:drawable/ic_menu_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tint="#377c3c"
            android:visibility="gone"/>

    <ImageView
            android:id="@+id/exo_resize_button"
            android:src="@android:drawable/ic_menu_crop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tint="#377c3c"
            android:visibility="gone"
            android:layout_toEndOf="@id/exo_track_selection_button"
            android:layout_marginStart="10dp"/>

    <ImageView
            android:id="@+id/exo_live_button"
            android:src="@android:drawable/ic_menu_rotate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tint="#377c3c"
            android:visibility="gone"
            android:layout_toEndOf="@id/exo_resize_button"
            android:layout_marginStart="10dp"/>

    <TextView
            android:id="@+id/source_num_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="35sp"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="#377c3c"
            android:layout_toEndOf="@id/exo_live_button"
            android:layout_marginStart="10dp"/>


</RelativeLayout>
